<%- include('partials/header') %>

<section class="page-header page-header-small">
    <div class="container">
        <h1>Search Results</h1>
        <% if (query) { %>
            <p>Showing results for "<strong><%= query %></strong>"</p>
        <% } %>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="search-page-form">
            <form action="/search" method="GET" class="search-form-inline">
                <div class="search-input-wrapper large">
                    <i class="fas fa-search"></i>
                    <input type="text" name="q" value="<%= query %>" placeholder="Search courses, policies, handbooks..." class="search-input" autofocus>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Search</button>
            </form>
        </div>

        <% if (query) { %>
            <div class="search-results-info">
                <p><strong><%= results.length %></strong> result<%= results.length !== 1 ? 's' : '' %> found</p>
            </div>

            <% if (results.length > 0) { %>
                <div class="search-results">
                    <% results.forEach(function(result) { %>
                        <a href="<%= result.url %>" class="search-result-card">
                            <div class="result-type <%= result.type.toLowerCase() %>"><%= result.type %></div>
                            <div class="result-content">
                                <h3>
                                    <% if (result.code) { %>
                                        <span class="result-code"><%= result.code %></span>
                                    <% } %>
                                    <%= result.title %>
                                </h3>
                                <% if (result.category) { %>
                                    <span class="result-category"><i class="fas fa-folder"></i> <%= result.category %></span>
                                <% } %>
                            </div>
                            <i class="fas fa-arrow-right result-arrow"></i>
                        </a>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="no-results">
                    <div class="no-results-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h2>No results found</h2>
                    <p>We couldn't find anything matching "<strong><%= query %></strong>". Try different keywords or browse our pages below.</p>
                    
                    <div class="search-suggestions-grid">
                        <a href="/courses" class="suggestion-card">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Browse Courses</span>
                        </a>
                        <a href="/policies" class="suggestion-card">
                            <i class="fas fa-file-alt"></i>
                            <span>Policies & Procedures</span>
                        </a>
                        <a href="/handbooks" class="suggestion-card">
                            <i class="fas fa-book"></i>
                            <span>Student Handbooks</span>
                        </a>
                        <a href="/contact" class="suggestion-card">
                            <i class="fas fa-envelope"></i>
                            <span>Contact Us</span>
                        </a>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="search-empty">
                <div class="search-empty-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h2>What are you looking for?</h2>
                <p>Enter a search term above to find courses, policies, handbooks, and more.</p>
                
                <div class="popular-searches">
                    <h4>Popular Searches</h4>
                    <div class="search-tags large">
                        <a href="/search?q=commercial+cookery">Commercial Cookery</a>
                        <a href="/search?q=business">Business</a>
                        <a href="/search?q=hospitality">Hospitality Management</a>
                        <a href="/search?q=leadership">Leadership</a>
                        <a href="/search?q=refund">Refund Policy</a>
                        <a href="/search?q=rpl">RPL</a>
                        <a href="/search?q=handbook">Student Handbook</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
